{
    "plugins": [
        "include",
        "loop-optimizer",
        "wildcard",
        "add-module-exports",
        "transform-runtime",
        "transform-class-properties",
        "transform-do-expressions",
        "transform-function-bind",
        "babel-plugin-transform-export-extensions"
    ],
    "presets": [
        "flow",
        ["env", {
            "targets": {
                "node": 4.2
            }
        }],
    ],
    "env": {
        "test": {
            "plugins": [
                "istanbul"
            ]
        }
    }
}